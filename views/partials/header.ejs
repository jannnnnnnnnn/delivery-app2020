        <li>
          <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
        </li>
        <% } else { %>
        <!-- Dropdown Trigger -->
        <li>
          <a class="dropdown-trigger" href="#!" data-target="dropdown1">Account<i
              class="material-icons right">arrow_drop_down</i></a>
        </li>
        <% } %>
      </ul>
    </div>
